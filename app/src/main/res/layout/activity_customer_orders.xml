<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.Activities.CustomerOrdersActivity"
    android:background="@drawable/background_tmp_home2">

    <ImageButton
        android:id="@+id/orders_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:backgroundTint="@color/navyblue_brand"
        android:contentDescription="@string/back_button"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView_Orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/kabrio_soft_bold"
        android:text="Orders"
        android:textSize="25dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orders_back"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/no_orders"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_centerInParent="true"
        app:srcCompat="@drawable/no_orders" />


</RelativeLayout>
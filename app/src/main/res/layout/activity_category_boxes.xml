<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Category.CategoryBoxes"
    android:background="@drawable/background_tmp_home2">


    <TextView
        android:id="@+id/text_boxes_ADMIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/kabrio_soft_bold"
        android:text="Char-CUTE- \nrie boxes"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_ADMIN_boxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_boxes_ADMIN"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/add_btn_boxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/navyblue_brand"
        android:textAllCaps="false"
        android:fontFamily="@font/kabrio_soft_regular"
        android:text="Add" />


</RelativeLayout>
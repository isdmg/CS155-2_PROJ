<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/background_tmp">


    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="176dp"
        android:layout_height="174dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="120dp"
        app:srcCompat="@drawable/tmc_round_monogram" />

    <TextView
        android:id="@+id/Midnight_title"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:text="Midnight Chevves"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/kabrio_soft_bold"/>

    <TextView
        android:id="@+id/login_subs2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Midnight_title"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/kabrio_soft_regular"
        android:text="Satisfy your midnight cravings!"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/login_subs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Midnight_title"
        android:layout_marginTop="145dp"
        android:text="You need to Sign In or Create an account to continue."
        android:textAlignment="center"
        android:fontFamily="@font/kabrio_soft_regular"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_login_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_subs"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:hint="E-mail"
        app:startIconDrawable="@drawable/profile"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_password_login"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_login_email"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:hint="@string/password"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/key">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_login"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_password_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="35dp"
        android:text="Sign in"
        android:textAllCaps="false"
        app:cornerRadius="10dp" />


    <TextView
        android:id="@+id/signup_button_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="5dp"
        android:text="-------------------------------------  or  -------------------------------------"
        android:textAlignment="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_signup_redirect"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/signup_button_header"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="35dp"


        android:text="Sign up"
        android:textAllCaps="false"
        app:cornerRadius="10dp"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        app:backgroundTint="#ef4747"/>






</RelativeLayout>
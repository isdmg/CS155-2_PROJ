<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:layout_margin="16dp"
    android:alpha="1"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"

    >

    <LinearLayout
        android:id="@+id/add_ons_product_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@color/LightBG_hans"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/add_ons_product_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/add_ons_product_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="3dp"
            android:text="Product Name"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/kabrio_soft_regular"
            />

        <TextView
            android:id="@+id/add_ons_product_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="3dp"
            android:text="â‚±100"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/kabrio_soft_regular"
            android:textSize="10sp" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/add_ons_button_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:initialNumber="0"
            android:layout_gravity="center"
            app:backGroundColor="@color/navyblue_brand"
            app:textSize="5sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>







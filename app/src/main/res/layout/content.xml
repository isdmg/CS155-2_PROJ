<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/heading1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/kabrio_soft_bold"
        android:paddingBottom="20dp"
        android:text="Satisfy your midnight cravings!"
        android:textAlignment="center"
        android:textColor="@color/navyblue_brand"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/abouttext1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading1"
        android:layout_centerHorizontal="true"
        android:text="@string/about1"
        android:textAlignment="center"
        android:textColor="@color/navyblue_brand"
        android:textSize="15dp"
        android:fontFamily="@font/kabrio_soft_regular"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abouttext1"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/navyblue_brand"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/drag_line_aboutus1"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/yellow_line" />

            <ImageView
                android:id="@+id/bg_card_aboutus_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/_3rd_white_card_bg" />

            <TextView
                android:id="@+id/heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/kabrio_soft_bold"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:text="So... who are we?"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/abouttext2"
                android:layout_width="300dp"
                android:layout_height="270dp"
                android:layout_below="@id/heading2"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/kabrio_soft_regular"
                android:gravity="center"
                android:text="@string/about2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/drag_line_aboutus2"
        android:layout_below="@id/cardview1_aboutus"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellow_line" />
    <TextView
        android:id="@+id/heading3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview1_aboutus"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kabrio_soft_bold"
        android:paddingBottom="20dp"
        android:text="The head chevves!"
        android:textAlignment="center"
        android:textColor="@color/navyblue_brand"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cardview1_aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/_1st_white_card_bg" />

    <LinearLayout
        android:id="@+id/headchef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:src="@drawable/image_chefs" />

    </LinearLayout>



    <TextView
        android:id="@+id/abouttext3"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headchef"
        android:text="@string/about3"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/navyblue_brand"
        android:textSize="15dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abouttext3"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/navyblue_brand"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/drag_line_aboutus3"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/yellow_line" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/_2nd_white_card_bg" />

            <TextView
                android:id="@+id/heading4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/kabrio_soft_bold"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:text="Our mission!"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/abouttext4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading4"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:text="@string/about4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/drag_line_aboutus4"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cardview2_aboutus"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellow_line" />

    <TextView
        android:id="@+id/heading5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview2_aboutus"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/kabrio_soft_bold"
        android:paddingBottom="20dp"
        android:text="Follow us!"
        android:textAlignment="center"
        android:textColor="@color/navyblue_brand"
        android:textSize="35dp" />

    <LinearLayout
        android:id="@+id/socialmedia"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/fb"
            app:tint="@color/navyblue_brand"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/insta"
            app:tint="@color/navyblue_brand"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview2_aboutus"
        app:srcCompat="@drawable/_4th_white_card_bg" />

    <TextView
        android:id="@+id/abouttext5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socialmedia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/about5"
        android:textAlignment="center"
        android:textColor="@color/navyblue_brand"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/abouttext6"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/abouttext5"
        android:text="ig: themidnightchevves \n fb: The Midnight Chevves"
        android:textAlignment="center"
        android:textColor="@color/navyblue_brand"
        android:textSize="15dp"
        android:fontFamily="@font/kabrio_soft_bold_numbers_italic"/>

</RelativeLayout>


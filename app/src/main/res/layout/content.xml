<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/heading1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/kabrio_soft_bold"
        android:paddingBottom="20dp"
        android:text="Satisfy Your Midnight Cravings"
        android:textAlignment="center"
        android:textColor="@color/navyblue_brand"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/abouttext1"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading1"
        android:text="@string/about1"
        android:textAlignment="center"
        android:textSize="15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abouttext1"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/navyblue_brand"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp">

        <TextView
            android:id="@+id/heading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/kabrio_soft_bold"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:text="So... who are we?"
            android:textColor="@color/white"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/abouttext2"
            android:layout_width="300dp"
            android:layout_height="432dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:text="@string/about2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/headch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview1_aboutus"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="156dp"
            android:layout_height="174dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="156dp"
            android:layout_height="174dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/profile" />

    </LinearLayout>

    <TextView
        android:id="@+id/heading3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headch"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/kabrio_soft_bold"
        android:paddingBottom="20dp"
        android:text="The head chevves!"
        android:textAlignment="center"
        android:textColor="@color/navyblue_brand"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/abouttext3"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading3"
        android:text="@string/about3"
        android:textAlignment="center" />

</RelativeLayout>


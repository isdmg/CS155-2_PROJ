<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="100dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:layout_gravity="">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/extra_product_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"

                android:text="Product Name" />

            <TextView
                android:id="@+id/extra_product_quantity"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/extra_product_name"
                android:layout_marginTop="5dp"
                android:text="Product Quantitiy"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/extra_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/extra_product_quantity"
                android:layout_marginTop="15dp"
                android:text="Product Price"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
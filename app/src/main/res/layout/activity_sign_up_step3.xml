<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpStep3Activity"
    android:background="@drawable/background_tmp">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="176dp"
        android:layout_height="174dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="120dp"
        app:srcCompat="@drawable/tmc_round_monogram" />

    <TextView
        android:id="@+id/Midnight_title"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:text="Midnight Chevves"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/kabrio_soft_bold"/>

    <TextView
        android:id="@+id/login_subs2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Midnight_title"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/kabrio_soft_regular"
        android:text="Satisfy your midnight cravings!"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/upload_dp_title"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_subs2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="139dp"
        android:text="Upload Profile Photo!"
        android:textStyle="bold"
        android:fontFamily="@font/kabrio_soft_regular"/>

    <ImageButton
        android:id="@+id/signup_step3_back"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:background="@drawable/back_btn"

        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:contentDescription="@string/back_button"
        android:scaleType="fitXY"
        android:backgroundTint="@color/white"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/signup_account_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/upload_dp_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_add" />


    <Button
        android:id="@+id/button_signup"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_account_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="35dp"
        android:text="Next"
        android:textAllCaps="false"
        android:fontFamily="@font/kabrio_soft_regular"
        app:cornerRadius="10dp" />

</RelativeLayout>
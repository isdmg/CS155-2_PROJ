<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Category.CategoryWines">


    <TextView
        android:id="@+id/text_wines_ADMIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Wines"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_ADMIN_wines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_wines_ADMIN"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/add_btn_wines"
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-83dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/recycler_view_ADMIN_wines"
        android:text="Add" />


</RelativeLayout>